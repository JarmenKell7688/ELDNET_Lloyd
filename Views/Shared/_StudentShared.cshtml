<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ELDNET</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ELDNET_Lloyd.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body style="margin:0; padding:0; height:100%;">
    @if (TempData["Message"] != null)
    {
        <div class="alert @TempData["AlertStyle"] alert-dismissible fade show text-center" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="d-flex flex-column flex-shrink-0 p-3"
             style="width: 280px; min-height: 100vh; background-color: #000; color: #fff;">
            <div class="text-center mb-4">
                <img src="@Url.Action("GetStudentImage", "Account")"
                     alt="Student Profile"
                     class="rounded-circle"
                     style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #fff;">
                <h5 class="mt-3 fw-semibold">@User.FindFirst("FullName")?.Value</h5>
            </div>

            <!-- Navigation Links -->
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item mb-2">
                    <a asp-controller="StudentPanel" asp-action="Home" class="btn btn-outline-light w-100 text-start">
                        <i class="bi bi-house-door me-2"></i> Home
                    </a>
                </li>
                <li class="mb-2">
                    <a asp-controller="StudentPanel" asp-action="GatePass" class="btn btn-outline-light w-100 text-start">
                        <i class="bi bi-card-checklist me-2"></i> Gate Pass Reservation
                    </a>
                </li>
                <li class="mb-2">
                    <a asp-controller="StudentPanel" asp-action="Locker" class="btn btn-outline-light w-100 text-start">
                        <i class="bi bi-lock me-2"></i> Locker Reservation
                    </a>
                </li>
                <li class="mb-2">
                    <a asp-controller="StudentPanel" asp-action="Activity" class="btn btn-outline-light w-100 text-start">
                        <i class="bi bi-calendar-event me-2"></i> Activity Area Reservation
                    </a>
                </li>
            </ul>

            <!-- Logout Button -->
            <div class="mt-auto pt-3 border-top border-secondary text-center">
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </button>
                </form>
            </div>
        </div>


        <!-- Main content area -->
        <div class="flex-grow-1 px-4 py-1" style="background-color: #f8f9fa;">
            @RenderBody()
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
