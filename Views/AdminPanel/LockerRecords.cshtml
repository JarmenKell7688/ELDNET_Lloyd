@model IEnumerable<ELDNET_Lloyd.Models.Locker>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_AdminShared";
}

<div class="container-fluid mt-5 ms-0">
<h2 class="mb-4 text-center">Locker Reservation Records</h2>

<div class="table-responsive">
    <table class="table table-bordered table-striped" style="min-width:1200px;">
        <thead class="table-dark text-center">
            <tr>
                <th>Id</th>
                <th>Student Id</th>
                <th>Name</th>
                <th>ID Number</th>
                <th>Locker Number</th>
                <th>Semester</th>
                <th>Contact Number</th>
                <th style="width:200px;">Documents</th>
                <th>Created At</th>
                <th style="width:120px;">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.StudentId</td>
                        <td>@item.Name</td>
                        <td>@item.IdNumber</td>
                        <td>@item.LockerNumber</td>
                        <td>@item.Semester</td>
                        <td>@item.ContactNumber</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.DocumentFilesJson))
                            {
                                var files = System.Text.Json.JsonSerializer.Deserialize<List<UploadedFileViewModel>>(item.DocumentFilesJson);
                                foreach (var file in files)
                                {
                                    var fileUrl = $"data:{file.ContentType};base64,{file.Base64Data}";
                                    string iconClass = file.ContentType.StartsWith("image/") ? "bi bi-image" :
                                    file.ContentType == "application/pdf" ? "bi bi-file-earmark-pdf" :
                                    "bi bi-file-earmark";
                                    <div class="mb-1">
                                        <i class="@iconClass me-1"></i>
                                        <a href="@fileUrl" target="_blank">@file.FileName</a>
                                    </div>
                                }
                            }
                            else
                            {
                                <span class="text-muted">No documents</span>
                            }
                        </td>
                        <td>@item.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                        <td>
                            <form asp-action="Delete" asp-controller="LockerRecords" asp-route-id="@item.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="10" class="text-center">No records found</td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>


