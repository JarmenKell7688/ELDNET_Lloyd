@model IEnumerable<ELDNET_Lloyd.Models.GatePass>

@{
    Layout = "_AdminShared";
}

<div class="container-fluid mt-5 ms-0">
    <h2 class="mb-4 text-center">Gate Pass Records</h2>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="text-center" style="background-color: #ff6600; color: white;">
                <tr>
                    <th style="width: 15%;">ID</th>
                    <th style="width: 20%;">Student ID</th>
                    <th style="width: 65%;">Action</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.StudentId</td>
                            <td>
                                <button type="button" class="btn btn-sm me-2" style="background-color: #ff6600; color: white;"
                                        data-bs-toggle="modal" data-bs-target="#viewModal@(item.Id)">
                                    View
                                </button>
                                <form asp-action="Delete" asp-controller="GatePassRecords" asp-route-id="@item.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this record?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>

                        <!-- Modal for viewing full details -->
                        <div class="modal fade" id="viewModal@(item.Id)" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header" style="background-color: #ff6600; color: white;">
                                        <h5 class="modal-title">Gate Pass Details - ID: @item.Id</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h6 class="fw-bold mb-3">Personal Information</h6>
                                                <p><strong>School Year:</strong> @item.SchoolYear</p>
                                                <p><strong>Name:</strong> @item.Name</p>
                                                <p><strong>Address:</strong> @item.Address</p>
                                                <p><strong>Date:</strong> @(item.Date?.ToString("MM/dd/yyyy"))</p>
                                                <p><strong>Type:</strong> @item.Type</p>
                                                <p><strong>Department:</strong> @item.Department</p>
                                                <p><strong>Course Year:</strong> @item.CourseYear</p>
                                            </div>
                                            <div class="col-md-6">
                                                <h6 class="fw-bold mb-3">Vehicle Information</h6>
                                                <p><strong>Plate No:</strong> @item.VehiclePlateNo</p>
                                                <p><strong>Registration Expiry:</strong> @(item.RegistrationExpiry?.ToString("MM/dd/yyyy"))</p>
                                                <p><strong>Vehicle Type:</strong> @item.VehicleType</p>
                                                <p><strong>Maker:</strong> @item.Maker</p>
                                                <p><strong>Color:</strong> @item.Color</p>
                                                <p><strong>Created At:</strong> @item.CreatedAt.ToString("MM/dd/yyyy HH:mm")</p>
                                            </div>
                                        </div>
                                        <hr />
                                        <h6 class="fw-bold mb-3">Documents</h6>
                                        @if (!string.IsNullOrEmpty(item.DocumentFilesJson))
                                        {
                                            var files = System.Text.Json.JsonSerializer.Deserialize<List<UploadedFileViewModel>>(item.DocumentFilesJson);
                                            foreach (var file in files)
                                            {
                                                var fileUrl = $"data:{file.ContentType};base64,{file.Base64Data}";
                                                <div class="mb-2">
                                                    <a href="@fileUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                                        📄 @file.FileName
                                                    </a>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <p class="text-muted">No documents uploaded</p>
                                        }
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No records found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>