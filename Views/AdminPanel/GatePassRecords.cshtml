@model IEnumerable<ELDNET_Lloyd.Models.GatePass>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_AdminShared";
}

<div class="container-fluid mt-5 ms-0">
    <h2 class="mb-4 text-center">Gate Pass Records</h2>

    <div class="table-responsive">
        <table class="table table-bordered table-striped" style="min-width:1200px;">
            <thead class="table-dark text-center">
                <tr>
                    <th>Id</th>
                    <th>Student Id</th>
                    <th>School Year</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Department</th>
                    <th>Course Year</th>
                    <th>Plate No</th>
                    <th>Registration Expiry</th>
                    <th>Vehicle Type</th>
                    <th>Maker</th>
                    <th>Color</th>
                    <th style="width:200px;">Documents</th>
                    <th>Created At</th>
                    <th style="width:120px;">Action</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.StudentId</td>
                            <td>@item.SchoolYear</td>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@(item.Date?.ToString("MM/dd/yyyy"))</td>
                            <td>@item.Type</td>
                            <td>@item.Department</td>
                            <td>@item.CourseYear</td>
                            <td>@item.VehiclePlateNo</td>
                            <td>@(item.RegistrationExpiry?.ToString("MM/dd/yyyy"))</td>
                            <td>@item.VehicleType</td>
                            <td>@item.Maker</td>
                            <td>@item.Color</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.DocumentFilesJson))
                                {
                                    // Deserialize JSON into a list of files
                                    var files = System.Text.Json.JsonSerializer.Deserialize<List<UploadedFileViewModel>>(item.DocumentFilesJson);

                                    foreach (var file in files)
                                    {
                                        // Create a data URL for the file
                                        var fileUrl = $"data:{file.ContentType};base64,{file.Base64Data}";

                                        // Show icon based on file type
                                        string iconClass = file.ContentType.StartsWith("image/") ? "bi bi-image" :
                                        file.ContentType == "application/pdf" ? "bi bi-file-earmark-pdf" :
                                        "bi bi-file-earmark";

                                        <div class="mb-1">
                                            <i class="@iconClass me-1"></i>
                                            <a href="@fileUrl" target="_blank">@file.FileName</a>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">No documents</span>
                                }
                            </td>

                            <td>@item.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                            <td>
                                <form asp-action="Delete" asp-controller="GatePassRecords" asp-route-id="@item.Id" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this record?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="17" class="text-center">No records found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


