@model ELDNET_Lloyd.Models.Locker;

@*
*@
@{
    Layout = "_StudentShared";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Form Card -->
            <div class="bg-light border border-dark p-4" style="border-radius: 15px;">
                <!-- Header inside the card -->
                <div class="text-white p-3 mb-4 text-center" style="border-radius: 5px; background-color: #ff6600;">
                    <h1 class="h4 mb-0">Locker Form</h1>
                </div>

                <form asp-action="Submit" asp-controller="Locker" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <!-- Locker Information Section -->
                    <div class="mb-4">
                        <h2 class="h5 fw-bold pb-2 mb-3 border-bottom border-dark">Locker Information</h2>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-medium">Full Name</label>
                            <input asp-for="Name" class="form-control border border-dark" style="border-radius: 5px;" placeholder="Enter full name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdNumber" class="form-label fw-medium">ID Number</label>
                            <input asp-for="IdNumber" class="form-control border border-dark" style="border-radius: 5px;" placeholder="Enter ID number" />
                            <span asp-validation-for="IdNumber" class="text-danger small"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="LockerNumber" class="form-label fw-medium">Locker Number</label>
                                <input asp-for="LockerNumber" class="form-control border border-dark" style="border-radius: 5px;" placeholder="Enter locker number" />
                                <span asp-validation-for="LockerNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Semester" class="form-label fw-medium">Semester</label>
                                <input asp-for="Semester" class="form-control border border-dark" style="border-radius: 5px;" placeholder="e.g., 1st Semester" />
                                <span asp-validation-for="Semester" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ContactNumber" class="form-label fw-medium">Contact Number</label>
                            <input asp-for="ContactNumber" class="form-control border border-dark" style="border-radius: 5px;" placeholder="Enter contact number" />
                            <span asp-validation-for="ContactNumber" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DocumentUploadFiles" class="form-label fw-medium">Locker Agreement Document</label>
                            <input asp-for="DocumentUploadFiles" type="file" class="form-control border border-dark" style="border-radius: 5px;" multiple />
                            <span asp-validation-for="DocumentUploadFiles" class="text-danger small"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn w-100 py-3 fw-medium" style="border-radius: 5px; background-color: #ff6600; color: white; border: none;">
                        Submit Locker Request
                    </button>
                </form>


            </div>

        </div>
    </div>
</div>